<mvc:View
    controllerName="be.ap.sap.bookapp.controller.Detail"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
        id="detailPage"
        busy="{detailView>/busy}"
        busyIndicatorDelay="{detailView>/delay}"
        showFooter="true">
        <semantic:titleHeading>
            <Title
                text="{Title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>

        </semantic:content>
        <!--Semantic ShareMenu Buttons-->
        <semantic:sendEmailAction>
            <semantic:SendEmailAction
                id="shareEmail"
                press=".onSendEmailPress"/>
        </semantic:sendEmailAction>

        <semantic:closeAction>
            <semantic:CloseAction
                    id="closeColumn"
                    press=".onCloseDetailPress"/>
        </semantic:closeAction>

        <semantic:fullScreenAction>
            <semantic:FullScreenAction
                    id="enterFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:fullScreenAction>
        <semantic:exitFullScreenAction>
            <semantic:ExitFullScreenAction
                    id="exitFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:exitFullScreenAction>

        <semantic:content>
            <VBox>
                <f:SimpleForm>
                    <f:content>
                        <Label text="{i18n>isbn}" visible="{detailView>/new}" />
                    <Input value="{Isbn}" visible="{detailView>/new}" />
                        <Label text="{i18n>isbn}" visible="{= !${detailView>/new} }" />
                        <Text text="{Isbn}" visible="{= !${detailView>/new} }" />
                        <Label text="{i18n>title}" />
                    <Input value="{Title}" />
                    <Label text="{i18n>author}." />
                    <Input value="{Author}" />
                        <Label text="{i18n>description}" />
                    <Input value="{Description}" />
                    </f:content>
                </f:SimpleForm>

                <Table inset="false" items="{ path: 'ToStoreStock' }">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="{i18n>storeStock}" level="H2"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>store}" />
                        </Column>
                        <Column hAlign="End">
                            <Text text="{i18n>stock}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier title="{Name}" text="{StoreId}"/>
                                <ObjectNumber number="{Stock}" unit="{i18n>book}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </semantic:content>

        <semantic:footerCustomActions>
			<Button text="Save" press="onSave" />
			<Button text="Delete" press="onDelete" visible="{= !${detailView>/new} }"/>
			<Button text="Cancel" press="onCancel" visible="{detailView>/new}"/>
        </semantic:footerCustomActions>

    </semantic:SemanticPage>

</mvc:View>